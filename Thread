// Thread is an instance of Process or a light weight object.
// We have to extend Thread class to use Thread.


class A extends Thread {
    public void run()        // run() is a built-in method in Thread or a state in Thread.
    {
        for(int i=0;i<50;i++)
        {
            System.out.println("Amar");
        }
    }
}
class B extends Thread {
    public void run()
    {
        for(int i=0;i<50;i++)
        {
            System.out.println("Amarendra");
        }
    }
}

public class HelloWorld {
    public static void main(String[] args) {
        A ob = new A();
        B obj = new B();
        ob.start();         // It is also a built-in method in Thread used to start the execution.
        obj.start();
    }
}
